<body>
  <h1><%= "Edit track: #{@track.title}" %></h1>

  <form action="<%= track_url(@track) %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <p>
        <input
          type="text"
          name="track[title]"
          id="track_title"
          value="<%= "#{@track.title}" %>"
        >Track Title
      </p>

      <p>
        <input
          type="number"
          name="track[album_id]"
          id="track_album_id"
          value="<%= "#{@track.album_id}" %>"
        >Album ID
      </p>

      <p><textarea rows="10" cols="20" name="track[lyrics]" id="track_lyrics" value="<%= "#{@track.lyrics}" %>"></textarea></p>

      <p><input type="submit" value="Update track"></p>
  </form>

</body>
