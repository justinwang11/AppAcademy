<body>
  <h1>Create a new band!</h1>

  <form action="<%= bands_url %>" method="POST">

    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <p><input type="text" name="band[name]" id="band_name">Band Name</p>
    <p><input type="submit" value="Create band!"></p>
  </form>

</body>
