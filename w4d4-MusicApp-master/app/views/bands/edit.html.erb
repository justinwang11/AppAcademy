<body>
  <h1><%= "Edit #{@band.name}" %></h1>

  <form action=<%= "#{band_url(@band)}" %> method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <p><input type="text" name="@band[name]" id="band_name">Band Name</p>
    <p><input type="submit" value="Update band"></p>
  </form>

</body>
