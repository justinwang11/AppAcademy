<div class="detail">
  <img src="<%=toy.escape('image_url')%>"/>
  <br>
  Name: <%= toy.escape('name') %>
  <br>
  Happiness: <%= toy.escape('happiness') %>
  <br>
  Price: <%= toy.escape('price') %>
  <br>
  <select>
    <% pokes.forEach(function (poke) {%>
      <option value="<%= poke.escape('id')%>"><%= poke.escape('name') %>
      </option>
    <%});%>
  </select>
</div>
