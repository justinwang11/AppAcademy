<h1>Edit Goal</h1>

<form action="<%= goal_url(@goal) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <%= auth_input %>

  <label>Title
    <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>

  <input type="radio" name="goal[privacy]" id="privacy_true" value="true" <%= "checked" if @goal.privacy %>>
    <label for="privacy_true">Private</label>
    <br>

  <input type="radio" name="goal[privacy]" id="privacy_false" value="false" <%= "checked" unless @goal.privacy %>>
    <label for="privacy_false">Public</label>

  <input type="radio" name="goal[completion]" id="completion_true" value="true" <%= "checked" if @goal.completion %>>
    <label for="completion_true">Completed</label>
    <br>

  <input type="radio" name="goal[completion]" id="completion_false" value="false" <%= "checked" unless @goal.completion %>>
    <label for="completion_false">Incomplete</label>

  <input type="submit" value="Update Goal">

</form>
